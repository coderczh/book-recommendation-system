.item-header {
  padding: 50rpx 30rpx;
}

.item-header .item-title {
  font-size: 50rpx;
}

.item-header .item-detail {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.item-detail .left-detail {
  flex: 1;
  margin-right: 20rpx;
}

.left-detail .item-rate {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-rate .comment-persons {
  font-size: 28rpx;
  color: #494949;
  margin-left: 20rpx;
}

.item-detail .right-detail {
  width: 225rpx;
  height: 300rpx;
}

.right-detail image {
  width: 100%;
  height: 100%;
}

.item-sub-detail {
  margin-top: 40rpx;
  font-size: 33rpx;
}

.item-sub-detail view {
  margin-bottom: 10rpx;
}

.item-description {
  padding: 20rpx 30rpx;
}

.item-description .item-description-title {
  color: #b3b3b3;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.item-description .item-show {
  font-size: 28rpx;
  line-height: 40rpx;
  letter-spacing: 5rpx;
}

.item-tags {
  padding: 50rpx 30rpx;
}

.item-tags .item-tags-title {
  color: #b3b3b3;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.item-tags .item-tags-list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.item-tags .item-tags-list text {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  color: #2b362a;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.comment-list-group {
  padding: 60rpx 30rpx;
}

.comment-list-group .comment-title {
  margin-top: 60rpx;
  font-size: 40rpx;
}

.more-comment {
  text-align: center;
  font-size: 34rpx;
  color: #37aeb4;
  margin-bottom: 40rpx;
}
