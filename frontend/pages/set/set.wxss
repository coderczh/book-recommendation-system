/* pages/set/set.wxss */

.key-info {
  background-color: #37aeb4;
  width: 100%;
  height: 350rpx;
}

.key-info .image {
  padding-top: 80rpx;
  text-align: center;
}

.key-info .image .clip-box {
  width: 100%;
  height: 100%;
}

.key-info .image .avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.key-info .text {
  text-align: center;
  padding: 20rpx;
  letter-spacing: 6rpx;
  color: #fff;
}

.bottom {
  display: flex;
  margin-top: 30rpx;
  margin-left: 25rpx;
}

.bottom .thumbnail {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}

.bottom .text {
  padding-top: 10rpx;
  height: 30rpx;
  color: #6D6C6C;
  letter-spacing: 3rpx;
}

.underline {
  margin-top: 25rpx;
  background: #e0e3da;
  height: 2rpx;
}
