/* components/search-bar/search-bar.wxss */
.searchbar {
  background-color: #37aeb4;
  padding: 20rpx;
  display: flex;
}

.search-navigator {
  width: 100%; 
  height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
  background-image: url("http://47.100.139.173:8888/group1/M00/00/07/rBEHPF5PYKKAB_ymAAAPPNvsjEA627.png");
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 8%;
  flex: 1;
}

.search-input-group {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.search-input {
  min-height: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.set {
  padding-top: 5rpx;
  width: 55rpx;
  height: 55rpx;
  padding-left: 15rpx;
}
